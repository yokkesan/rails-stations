<h1>映画一覧</h1>
<table border="1">
  <tr>
    <th>ID</th>
    <th>映画タイトル</th>
    <th>公開年</th>
    <th>上映中か</th>
    <th>概要</th>
    <th>画像</th>
    <th>作成日時</th>
    <th>更新日時</th>
  </tr>
  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.id %></td>
      <td><%= movie.name %></td>
      <td><%= movie.year %></td>
      <td><%= movie.is_showing ? "上映中" : "上映終了" %></td>
      <td><%= movie.description %></td>
      <td>
        <% image_url = movie.image_url.presence || "https://picsum.photos/100/150" %>
        <img src="<%= image_url %>" alt="映画ポスター" width="100">
      </td>
      <td><%= movie.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
      <td><%= movie.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
    </tr>
  <% end %>
</table>