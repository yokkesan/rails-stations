<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><%= f.label :email, "メールアドレス" %><br>
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>

  <div><%= f.label :password, "パスワード" %><br>
  <%= f.password_field :password, autocomplete: "current-password" %></div>

  <div><%= f.check_box :remember_me %> <%= f.label :remember_me, "ログイン状態を保持する" %></div>

  <div><%= f.submit "ログイン" %></div>
<% end %>

<%= link_to "ユーザー登録", new_user_registration_path %><br>
<%= link_to "パスワードを忘れた場合", new_user_password_path %>
