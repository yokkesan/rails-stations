<h1>管理画面: 映画一覧</h1>

<table border="1">
  <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>公開年</th>
    <th>上映中</th>
    <th>概要</th>
    <th>画像</th>
    <th>登録日時</th>
    <th>更新日時</th>
    <th>操作</th>
  </tr>
  <% @movies.each do |movie| %>
    <tr>
      <td><%= link_to movie.id, edit_admin_movie_path(movie) %></td>  <!-- 編集画面へのリンク -->
      <td><%= movie.name %></td>
      <td><%= movie.year %></td>
      <td><%= movie.is_showing ? "上映中" : "上映予定" %></td>
      <td><%= movie.description %></td>
      <td>
        <% if movie.image_url.present? %>
          <a href="<%= movie.image_url %>" target="_blank">画像</a>
        <% else %>
          <span>なし</span>
        <% end %>
      </td>
      <td><%= movie.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
      <td><%= movie.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
      <td><%= link_to "編集", edit_admin_movie_path(movie) %></td>
    </tr>
  <% end %>
</table>