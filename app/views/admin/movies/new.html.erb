<div class="admin-wrapper">
  <aside class="sidebar">
    <h2>menu</h2>
    <ul>
      <li><%= link_to '映画一覧', admin_movies_path %></li>
    </ul>
  </aside>

  <main class="content">
    <h1>映画登録</h1>

    <div class="form-container">
      <%= form_with(model: [:admin, @movie], local: true) do |form| %>
        <div class="form-group">
          <%= form.label :name, '映画タイトル' %>
          <%= form.text_field :name %>
        </div>

        <div class="form-group">
          <%= form.label :year, '公開年' %>
          <%= form.number_field :year %>
        </div>

        <div class="form-group">
          <%= form.label :is_showing, '上映中か' %>
          <%= form.select :is_showing, [['上映中', true], ['未上映', false]] %>
        </div>

        <div class="form-group">
          <%= form.label :description, '概要' %>
          <%= form.text_field :description %>
        </div>

        <div class="form-group">
          <%= form.label :image_url, '画像URL' %>
          <%= form.text_field :image_url %>
        </div>

        <div class="button-group">
          <%= link_to 'Close', admin_movies_path, class: 'btn btn-secondary' %>
          <%= form.submit 'Save', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </main>
</div>