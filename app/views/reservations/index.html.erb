<h1>予約一覧（これから上映予定）</h1>

<table>
  <thead>
    <tr>
      <th>映画作品</th>
      <th>日付</th>
      <th>開始時間</th>
      <th>座席</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.schedule.movie.name %></td>
        <td><%= reservation.date %></td>
        <td><%= reservation.schedule.start_time.strftime("%H:%M") %></td>
        <td><%= "#{reservation.sheet.row}#{reservation.sheet.column}" %></td>
        <td><%= reservation.name %></td>
        <td><%= reservation.email %></td>
        <td>
          <%= link_to '詳細・編集', admin_reservation_path(reservation) %> |
          <%= link_to '削除', admin_reservation_path(reservation), method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新規予約追加', new_admin_reservation_path, class: 'button' %>
